<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
     android:layout_margin="10dp"
    android:background="@drawable/optionmenu_bg"
    >
     <TextView   android:layout_width="wrap_content"
    	 
    	android:layout_height="wrap_content"
    	android:id="@+id/title_text"
    	android:textColor="#f3f4f3"
    	android:paddingTop="0dp"
    	android:textSize="16dp"
    	         android:layout_marginTop="10dp"
  android:layout_marginBottom="10dp"
    	android:layout_alignParentTop="true"
    	android:layout_alignParentLeft="true"
     />
          <TextView   android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/time_text"
    	android:textColor="#f3f4f3"
    	android:padding="10dp"
    	android:paddingTop="0dp"
    	android:textSize="12dp"
    	android:layout_alignBaseline="@id/title_text"
    	android:layout_alignParentRight="true"
     />
     <ImageView  android:layout_width="fill_parent" android:layout_height="1px"
     android:background="#f3f4f3" 
     android:id="@+id/divider"
     android:layout_below="@id/title_text"
     android:layout_alignParentLeft="true"
     ></ImageView>
<GridView
         android:id="@+id/gridview"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:numColumns="4"
         android:verticalSpacing="10dip"
         android:horizontalSpacing="10dip"
         android:stretchMode="columnWidth"
         android:gravity="center"
         android:layout_below="@id/divider"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
  android:layout_marginBottom="10dp"
         />
         
     <ImageView  android:layout_width="fill_parent" android:layout_height="1px"
     android:background="#f3f4f3" 
     android:id="@+id/divider2"
     android:layout_below="@id/gridview"
     android:layout_alignParentLeft="true"
     ></ImageView>
  	<TextView   android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/ad_text"
    	android:textColor="#ffff33"
    	         android:layout_marginTop="10dp"
  android:layout_marginBottom="10dp"
   android:layout_marginRight="10dp"
    	android:paddingTop="0dp"
    	android:textSize="12dp"
    	android:text=""
    	android:layout_below="@id/divider2"
    	android:layout_alignParentRight="true"
     />
</RelativeLayout>